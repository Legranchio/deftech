<div class="col-md-6 [category={include file="modules/cat-id/news-id.tpl"}]col-md-4[/category]">
	<article class="blog-posts">
		<div class="entry-wrapper">
			<div class="entry-cover">
				<h4 class="entry-time">
					<span class="entry-day">{date=d}</span>
					<span class="entry-month">{date=M}</span>
				</h4>
				[full-link]<img src="{image-1}" alt="{title}">[/full-link]
			</div>
			<div class="entry-content-wrap">
				<div class="entry-header">
					<h2 class="entry-title">
						[full-link]{title}[/full-link]
					</h2>
				</div>
				<div class="entry-footer">
					<div class="entry-meta">
						<span class="entry-categories">{link-category}</span>
					</div>
				</div>
			</div>
		</div>
	</article>
</div>