<li>
	<div class="product-inner">
		<div class="product-thumbnail">
			[xfgiven_discount]<span class="onsale">Скидка!</span>[/xfgiven_discount]
			[full-link]<img style="width:100%" src="{image-1}" alt="images">[/full-link]
		</div>
		<div class="product-info">
			<div class="product-info-wrap">
				<h3>{title}</h3>
				<span class="price">
					[xfgiven_price]
						<span class="price">
							[xfgiven_oldprice]<del><span class="amount">[xfvalue_oldprice] <span><i class="fa fa-rub"></i></span></span></del>[/xfgiven_oldprice] 
							<ins><span class="amount">[xfvalue_price] <span><i class="fa fa-rub"></i></span></span></ins>
						</span>
					[/xfgiven_price]
				</span>
				<a class="button scheme2" href="{full-link}">Купить</a>
			</div>
		</div>
	</div>
</li>
